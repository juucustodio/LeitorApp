<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Leitor.Detalhe" Title="Leitor">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Texto" TextColor="{StaticResource Primary}" Margin="0,30,0,3" HorizontalTextAlignment="Center"/>
            <Label x:Name="lblText"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center" FontSize="Medium" Margin="10,10,10,30"/>



            <Button Clicked="Ouvir" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" Text="&#xf028;" FontSize="100" BackgroundColor="{StaticResource Primary}" WidthRequest="200" HeightRequest="200" CornerRadius="400">
                <Button.FontFamily>
                    <OnPlatform x:TypeArguments="x:String"  Android="fa-solid-900.ttf#Font Awesome 5 Free Regular" 
                                                            iOS="Font Awesome 5 Free"/>
                </Button.FontFamily>
            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>